{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "frog/jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "build", // خروجی همه فایل‌ها در پوشه build
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"] // مسیرهای داخلی از src تنظیم می‌شوند
    }
  },
  "include": ["src/**/*", "server.ts"], // اضافه کردن همه فایل‌های مورد نیاز
  "exclude": ["node_modules"]
}
